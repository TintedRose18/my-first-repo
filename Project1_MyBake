STARTING_FUNDS = 80.0
FLOUR_COST_PER_BAG = 2.5
EGGS_COST_PER_CRATE = 1.9
YEAST_COST_PER_BAG = 3.25
BUTTER_COST_PER_PACK = 1.25
MILK_COST_PER_JUG = 2.75
GALLONS_MILK_PER_JUG = 1.0
EGGS_PER_CRATE = 24.0
TBSP_BUTTER_PER_PACK = 64.0
CUPS_FLOUR_PER_BAG = 25.0
CUP_YEAST_PER_BAG = 6.0
FLOUR_REQUIRED = 48.0 + 112.5
EGGS_REQUIRED = 12.0 + 60.0
BUTTER_REQUIRED = 144.0
YEAST_REQUIRED = 39 + 50
MILK_REQUIRED = 18.0
CUPS_IN_GALLON = 16
TSP_IN_CUP = 48

NOTHING = 'NOTHING'
optionsList = ["Begin the baguette dough", "Make the macrons", "Make the croissants", "Bake the baguettes"]
cookingList = ["eggs", "flour", "butter", "yeast", "milk"]

def print_task_list(tasks_remaining):
    index = 0
    while index < len(optionsList):
        print(index + 1, "-", optionsList[index])
        index += 1

def is_valid_input(index, tasks):
    if index < len(tasks):
        return False

    if index > len(tasks):
        return False
    else:
        return True

def go_shopping():
    egg_tracker  = 0
    flour_tracker = 0
    butter_tracker = 0
    yeast_tracker = 0
    milk_tracker = 0
    
    money_tracker = STARTING_FUNDS

    enterItem = input("What would you like to purchase (Enter 'NOTHING' to leave store)")
    while enterItem != NOTHING and money_tracker > 0:

        if enterItem == cookingList[0]:
            egg_tracker = float(input("How many crates of eggs would you like? "))
            if eggs_tracker > EGGS_REQUIRED:
                print("You have run out of money!")
        if enterItem == cookingList[1]:
            flour_tracker = float(input("How many bags of flour would you like? "))
            if flour_tracker > FLOUR_REQUIRED:
                print("You have run out of money!")
        if enterItem == cookingList[2]:
            butter_tracker = float(input("How many packs of butter would you like? "))
            if butter_tracker > BUTTER_REQUIRED:
                print("You have run out of money!")
        if enterItem == cookingList[3]:
            yeast_tracker = float(input("How many bags of yeast would you like? "))
            if yeast_tracker > YEAST_REQUIRED:
                print("You have run out of money!")
        if enterItem == cookingList[4]:
            milk_tracker = float(input("How many jugs of milk would you like? "))
            if milk_tracker > MILK_REQUIRED:
                print("You have run out of money!")
	else:
            print("That is not a valid entry.")

def check_items_enough(shopping_cart):
    myCart = []
    while True:
        enterItem = input("What would you like to purchase (Enter 'NOTHING' to leave store)")
        myCart.append(enterItem)
        enterItem = input("What would you like to purchase (Enter 'NOTHING' to leave store)")

        if enterItem in myCart:
            print("This item is already in the cart. Pick something else.")
            enterItem = input("What would you like to purchase (Enter 'NOTHING' to leave store)")

        #return shopping_cart                                                                                             


def bake():
    print("We have everything we need! Ready! Set! Bake!")
    print("Here are your remaining tasks of the day")

    index = 0
    while index < len(optionsList):
        print(index + 1, "-", optionsList[index])
        index += 1

    crossOff = int(input("What action would you like to cross off your list next?"))

    if crossOff != optionsList[0]:
        print("We should really start the baguette dough first!")

    else:
        print("Ok, let's knead some baguette dough!")
        print("Here are your remaining tasks of the day")
        index = 1
        while index < len(optionsList):
            print(index + 1, "-", optionsList[index])
            index += 1

if __name__ == "__main__":

    print("Baker! You must buy the following with $80:")

    print()

    print("       For 300 croissants:")
    print("         48 cups of flour")
    print("         12 eggs")
    print("         144 tbsp of butter")
    print("         39 tsp of yeast")
    print("         18 cups of milk")

    print()

    print("       For 600 macarons:")
    print("         60 eggs")

    print()

    print("Welcome to the supermarket!")

    letsGo = go_shopping()









