STARTING_FUNDS = 80.0
FLOUR_COST_PER_BAG = 2.5
EGGS_COST_PER_CRATE = 1.9
YEAST_COST_PER_BAG = 3.25
BUTTER_COST_PER_PACK = 1.25
MILK_COST_PER_JUG = 2.75
GALLONS_MILK_PER_JUG = 1.0
EGGS_PER_CRATE = 24.0
TBSP_BUTTER_PER_PACK = 64.0
CUPS_FLOUR_PER_BAG = 25.0
CUP_YEAST_PER_BAG = 6.0
FLOUR_REQUIRED = 48.0 + 112.5
EGGS_REQUIRED = 12.0 + 60.0
BUTTER_REQUIRED = 144.0
YEAST_REQUIRED = 39 + 50
MILK_REQUIRED = 18.0
CUPS_IN_GALLON = 16
TSP_IN_CUP = 48

NOTHING = 'NOTHING'
optionsList = ["Begin the baguette dough", "Make the macrons", "Make the croissants", "Bake the baguettes"]
cookingList = ["eggs", "flour", "butter", "yeast", "milk"]

def print_task_list(tasks_remaining):
    index = 0
    while index < len(optionsList):
        print(index + 1, "-", optionsList[index])
        index += 1

def is_valid_input(index, tasks):
    if index < len(tasks):
        return False

    if index > len(tasks):
        return False
    else:
        return True

def go_shopping():
    egg_tracker  = 0
    flour_tracker = 0
    butter_tracker = 0
    yeast_tracker = 0
    milk_tracker = 0
    
    itemsList = []
    
    money_tracker = STARTING_FUNDS

    enterItem = input("What would you like to purchase (Enter 'NOTHING' to leave store) ")
    while enterItem != NOTHING and money_tracker > 0:

        if enterItem == cookingList[0]:
            myEggs = float(input("How many crates of eggs would you like? "))
            egg_tracker += myEggs
            enterItem = input("What would you like to purchase (Enter 'NOTHING' to leave store) ")

        if enterItem == cookingList[1]:
            myFlour = float(input("How many bags of flour would you like? "))
            flour_tracker += myFlour
            enterItem = input("What would you like to purchase (Enter 'NOTHING' to leave store) ")

        if enterItem == cookingList[2]:
            myButter = float(input("How many packs of butter would you like? "))
            butter_tracker += myButter
            enterItem = input("What would you like to purchase (Enter 'NOTHING' to leave store) ")

	if enterItem == cookingList[3]:
            myYeast = float(input("How many bags of yeast would you like? "))
            yeast_tracker += myYeast
            enterItem = input("What would you like to purchase (Enter 'NOTHING' to leave store) ")

        if enterItem == cookingList[4]:
            myMilk = float(input("How many jugs of milk would you like? "))
            milk_tracker += myMilk
            enterItem = input("What would you like to purchase (Enter 'NOTHING' to leave store) ")
	    
	#else:                                                                         	                      
         #   print("That is not a valid entry.")                                                             
	 # reprompt user

def check_items_enough(shopping_cart):
conList = [EGGS_PER_CRATE, CUPS_FLOUR_PER_BAG, TBSP_BUTTER_PER_PACK, CUP_YEAST_PER_BAG, GALLONS_MILK_PER\
_JUG]
    reqList = [EGGS_REQUIRED, FLOUR_REQUIRED, BUTTER_REQUIRED, YEAST_REQUIRED, MILK_REQUIRED]

    for i in range(conList):
        if shopping_cart[i] * conList[i] >= reqList[i]:
            flag = True

        else:
            return False

    return flag

def bake():
    print("We have everything we need! Ready! Set! Bake!")
    print("Here are your remaining tasks of the day")

    index = 0
    while index < len(optionsList):
        print(index + 1, "-", optionsList[index])
        index += 1

    crossOff = int(input("What action would you like to cross off your list next? "))

    if crossOff != optionsList[0]:
        print("We should really start the baguette dough first!")

    else:
        print("Ok, let's knead some baguette dough!")
        print("Here are your remaining tasks of the day")
        index = 1
        while index < len(optionsList):
            print(index + 1, "-", optionsList[index])
            index += 1

